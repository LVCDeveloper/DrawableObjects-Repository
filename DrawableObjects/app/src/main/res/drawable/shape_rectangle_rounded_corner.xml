<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <size
        android:width="@dimen/shape_rectangle_width"
        android:height="@dimen/shape_rectangle_height" />

    <gradient
        android:startColor="@color/black"
        android:endColor="@color/rectangle_color"
        android:angle="@integer/shape_gradient_angle" />

    <corners
        android:radius="@dimen/shape_rectangle_corner" />

    <stroke
        android:width="@dimen/shape_stroke_gap"
        android:color="@color/black" />

</shape>