<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    Regardless of the size of the shapes, layerlist will automatically scale the shapes to
            fill the canvas, thus you need to use padding to control both the position, shape, and
            size of the shapes. -->

    <item
        android:top="@dimen/layerlist_box_red_padding_top"
        android:left="@dimen/layerlist_box_red_padding_left"
        android:bottom="@dimen/layerlist_box_red_padding_bottom"
        android:right="@dimen/layerlist_box_red_padding_right"
        android:drawable="@drawable/layerlist_box_red" />

    <item
        android:top="@dimen/layerlist_box_green_padding_top"
        android:left="@dimen/layerlist_box_green_padding_left"
        android:bottom="@dimen/layerlist_box_green_padding_bottom"
        android:right="@dimen/layerlist_box_green_padding_right"
        android:drawable="@drawable/layerlist_box_green" />

    <item
        android:top="@dimen/layerlist_box_blue_padding_top"
        android:left="@dimen/layerlist_box_blue_padding_left"
        android:bottom="@dimen/layerlist_box_blue_padding_bottom"
        android:right="@dimen/layerlist_box_blue_padding_right"
        android:drawable="@drawable/layerlist_box_blue" />

</layer-list>