<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="ring"
    android:innerRadius="@dimen/shape_ring_radius"
    android:thickness="0dp"
    android:useLevel="false">

    <size
        android:width="90dp"
        android:height="90dp"/>

    <solid
        android:color="@color/ring_fill_color"/>

    <stroke
        android:width="@dimen/shape_stroke_size"
        android:color="@color/ring_color"/>

</shape>