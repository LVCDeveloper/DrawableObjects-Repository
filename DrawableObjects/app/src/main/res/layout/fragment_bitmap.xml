<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/bitmap_txt_header"
        android:text="@string/bitmap_txt_header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bitmap_txt_header"
        android:layout_marginBottom="@dimen/separator_margin"
        android:textAppearance="?android:textAppearanceSmall"
        android:id="@+id/bitmap_txt_description"
        android:text="@string/bitmap_txt_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bitmap_txt_description"
        android:layout_centerHorizontal="true"
        android:id="@+id/bitmap_txt_button_separator"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bitmap_txt_button_separator"
        android:layout_toStartOf="@id/bitmap_txt_button_separator"
        android:id="@+id/bitmap_btn_png"
        android:text="@string/bitmap_btn_png"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bitmap_txt_button_separator"
        android:layout_toEndOf="@id/bitmap_txt_button_separator"
        android:id="@+id/bitmap_btn_jpg"
        android:text="@string/bitmap_btn_jpg"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bitmap_txt_button_separator"
        android:paddingTop="@dimen/separator_margin"
        android:layout_marginTop="@dimen/separator_margin"
        android:id="@+id/bitmap_img"/>

</RelativeLayout>