<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/shape_header"
        android:text="@string/shape_header"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAppearance="?android:textAppearanceSmall"
        android:id="@+id/shape_description"
        android:text="@string/shape_description"/>



    <ImageView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center|bottom"
        android:id="@+id/shape_rectangle"
        android:background="@drawable/shape_rectangle"/>
    <TextView
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center|top"
        android:id="@+id/shape_txt_rectangle"
        android:text="@string/shape_txt_rectangle"/>



    <ImageView
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center|bottom"
        android:id="@+id/shape_oval"
        android:background="@drawable/shape_oval"/>
    <TextView
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:id="@+id/shape_txt_oval"
        android:text="@string/shape_txt_oval"/>



    <ImageView
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center"
        android:id="@+id/shape_line"
        android:background="@drawable/shape_line"/>
    <TextView
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="center|top"
        android:id="@+id/shape_txt_line"
        android:text="@string/shape_txt_line"/>



    <ImageView
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center"
        android:id="@+id/shape_ring"
        android:background="@drawable/shape_ring"/>
    <TextView
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:id="@+id/shape_txt_ring"
        android:text="@string/shape_txt_ring"/>

</GridLayout>