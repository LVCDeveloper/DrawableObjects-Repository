<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true">

    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/fragment_shape_ring.xml_header"
        android:text="@string/ring_header"/>
    <TextView
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAppearance="?android:textAppearanceSmall"
        android:id="@+id/ring_description"
        android:text="@string/ring_description"/>



    <ImageView
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center|bottom"
        android:id="@+id/image_ring_solid"
        android:background="@drawable/shape_ring_solid"/>
    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center|top"
        android:id="@+id/ring_txt_solid"
        android:text="@string/ring_txt_solid"/>



    <ImageView
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center|bottom"
        android:id="@+id/image_ring_solid_thick"
        android:background="@drawable/shape_ring_solid_thick"/>
    <TextView
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:id="@+id/ring_txt_solid_thick"
        android:text="@string/ring_txt_solid_thick"/>



    <ImageView
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center|bottom"
        android:layerType="software"
        android:id="@+id/image_ring_dash"
        android:background="@drawable/shape_ring_dash"/>
    <TextView
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center|top"
        android:id="@+id/ring_txt_dash"
        android:text="@string/ring_txt_dash"/>



    <ImageView
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center|bottom"
        android:layerType="software"
        android:id="@+id/image_ring_dash_thick"
        android:background="@drawable/shape_ring_dash_thick"/>
    <TextView
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:id="@+id/ring_txt_dash_thick"
        android:text="@string/ring_txt_dash_thick"/>



    <ImageView
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="center|bottom"
        android:id="@+id/image_ring_filled"
        android:background="@drawable/shape_ring_filled"/>
    <TextView
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="center|top"
        android:id="@+id/ring_txt_filled"
        android:text="@string/ring_txt_filled"/>



    <ImageView
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="center|bottom"
        android:layerType="software"
        android:id="@+id/image_ring_filled_thick"
        android:background="@drawable/shape_ring_filled_thick"/>
    <TextView
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:id="@+id/ring_txt_filled_thick"
        android:text="@string/ring_txt_filled_thick"/>

</GridLayout>