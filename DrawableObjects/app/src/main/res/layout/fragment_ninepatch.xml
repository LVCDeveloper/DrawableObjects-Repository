<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/ninepatch_txt_header"
        android:text="@string/ninepatch_txt_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/separator_margin"
        android:textAppearance="?android:textAppearanceSmall"
        android:id="@+id/ninepatch_txt_description"
        android:text="@string/ninepatch_txt_description"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_textbox"
                android:text="@string/ninepatch_txt_textbox"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_tb_textbox"
                android:hint="@string/ninepatch_tb_textbox_hint"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/separator_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_dropdownlist"
                android:text="@string/ninepatch_txt_dropdownlist"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ninepatch_border_ddl"
                android:id="@+id/ninepatch_spn_dropdownlist"
                android:entries="@array/ninepatch_spn_dropdownlist" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/separator_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_radio"
                android:text="@string/ninepatch_txt_radio"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/ninepatch_border_box"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ninepatch_border_box"
                    android:id="@+id/ninepatch_rb_1"
                    android:text="@string/ninepatch_rb_radio_1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ninepatch_border_box"
                    android:id="@+id/ninepatch_rb_2"
                    android:text="@string/ninepatch_rb_radio_2"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ninepatch_border_box"
                    android:id="@+id/ninepatch_rb_3"
                    android:text="@string/ninepatch_rb_radio_3"/>
            </RadioGroup>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/separator_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_checkbox"
                android:text="@string/ninepatch_txt_checkbox"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_cb_1"
                android:text="@string/ninepatch_cb_checkbox_1"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_cb_2"
                android:text="@string/ninepatch_cb_checkbox_2"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_cb_3"
                android:text="@string/ninepatch_cb_checkbox_3"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/separator_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_slider"
                android:text="@string/ninepatch_txt_slider"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_skb_slider" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/separator_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_switch"
                android:text="@string/ninepatch_txt_switch"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_swb_switch"
                android:text="@string/ninepatch_txt_switch"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/separator_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_toggle"
                android:text="@string/ninepatch_txt_toggle"/>

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_tgb_toggle"

                android:textOn="@string/ninepatch_tgb_on"
                android:textOff="@string/ninepatch_tgb_off"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/separator_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_ratings"
                android:text="@string/ninepatch_txt_ratings"/>

            <RatingBar
                android:layout_width="@dimen/ninepatch_rtg_size"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_rtg_ratings"
                android:numStars="@integer/ninepatch_rtg_stars"
                android:stepSize="@integer/ninepatch_rtg_steps"
                android:rating="@integer/ninepatch_rtg_ratings"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/separator_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/ninepatch_txt_progressbar"
                android:text="@string/ninepatch_txt_progressbar"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:background="@drawable/ninepatch_border_box"
                android:id="@+id/ninepatch_pb_progress"
                android:progress="@integer/ninepatch_pb_progress"
                android:max="@integer/ninepatch_pb_max"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>